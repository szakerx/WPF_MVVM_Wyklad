<Window x:Class="MVVMTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVMTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="275" Width="331">
    <Grid>
        <Button Name="ChangeTextButton" Content="Click" Margin="31,32,0,0" Width="50" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Command="{Binding ChangeTextButtonCommand}"/>
        <Label  Content="{Binding Text}" Margin="107,50,0,0" Width="200" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="31,135,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
